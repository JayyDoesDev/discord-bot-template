{
  "root": true,
  "extends": [
      "eslint:recommended",
      "plugin:json/recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "json"
  ],
  "rules": {
      "no-unused-vars": "off",
      "no-undef": "off",
      "func-names": "off",
      "no-eval": "off",
      "no-invalid-this": "off",
      "no-return-await": "off",
      "no-var": "off",
      "require-await": "off",
      "no-extra-semi": "warn",
      "no-var-requires": "off"
  }
}